@{
    ViewData["Title"] = "Home Page";
}

@model ICollection<PuteModel>

<div class="container">
    <table>
        @foreach (PuteModel item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Home" asp-action="ViewSlut" asp-route-id="@item.Id">
                        @{
                            string imgPath = item.Name + ".jpg";
                        }
                        <img class="card-img" src="~/content/@imgPath" />
                    </a>
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.PriceHour $/hour
                </td>
            </tr>
        }
    </table>
</div>